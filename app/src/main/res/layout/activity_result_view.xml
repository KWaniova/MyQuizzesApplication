<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Game.ResultViewActivity"
    android:weightSum="4"
    android:orientation="vertical">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_weight="1"
        android:text="Your result"
        android:textSize="40dp"
        android:gravity="center"
        android:background="#009688"
        />
    <TextView
        android:id="@+id/number_of_questionsX"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_weight="0.5"
        android:text="Number of questions: X"
        android:textSize="30dp"
        android:gravity="center"/>
    <TextView
        android:id="@+id/number_of_right_questionsX"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_weight="1"
        android:text="Right answers X"
        android:textSize="30dp"
        android:gravity="center"/>
    <TextView
        android:id="@+id/number_of_wrong_questionsX"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_weight="1"
        android:text="Wrong answers X"
        android:textSize="30dp"
        android:gravity="center"/>


    <Button
        android:id="@+id/result_ok_button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="OK"
        android:layout_margin="20dp"
        android:textSize="30dp"/>


</LinearLayout>
<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Game.GameStartActivity"
    android:weightSum="3"
    android:onClick="onLinearLayoutClick"
    android:orientation="vertical">

    <TextView
        android:layout_weight="1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="START GAME"
        android:textSize="30dp"
        />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="40dp"
        android:id="@+id/enter_number_of_questions"
        android:inputType="numberSigned"
        android:hint = "Enter number of questions. Max X"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="vertical"
        android:weightSum="2">


        <Button
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="START"
            android:id="@+id/ok_button_game_start"
            android:padding="20dp"
            android:background="#AAEDBA"
            android:textSize="20dp"
            android:enabled="false"/>
        <Button
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#EBEDAA"

            android:text="CANCEL"
            android:id="@+id/cancel_button_game_start"
            android:padding="10dp"
            android:textSize="20dp"/>

    </LinearLayout>


</LinearLayout>
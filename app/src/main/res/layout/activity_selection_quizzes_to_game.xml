<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Game.SelectionQuizzesToGameActivity"
    android:orientation="vertical"
    android:weightSum="9">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="2"
        android:weightSum="2"
        android:background="#009688"
        android:orientation="vertical">
        <TextView
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Select quizzes"
            android:textStyle="bold"
            android:textColor="#F1EFF4"
            android:textSize="40sp"
            android:gravity="center"/>
        <TextView
            android:layout_weight="1"
            android:id="@+id/quantity_od_selected_quizzes"
            android:layout_width="match_parent"
            android:text="Selected: X"
            android:textColor="#F1EFF4"
            android:layout_height="wrap_content"
            android:textSize="20sp"
            android:gravity="center"/>
    </LinearLayout>
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recycler_view_quiz_selection"
        android:layout_weight="6.5"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="0.5"
        android:orientation="horizontal"
        android:weightSum="2">

        <Button
            android:layout_weight="1"
            android:background="#EBEDAA"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="CANCEL"
            android:id="@+id/calncel_button_quizzes_selected"
            android:padding="20dp"
            android:textSize="20sp"/>
        <Button
            android:layout_weight="1"
            android:background="#AAEDBA"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="OK"
            android:id="@+id/ok_button_quizzes_selected"
            android:padding="20dp"
            android:textSize="20sp"
            android:enabled="false"/>
    </LinearLayout>


</LinearLayout>
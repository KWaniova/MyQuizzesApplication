<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.myquizzesapplication">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".DBHelper.EmptyActivity"></activity>
        <activity android:name=".User.UserSettingsActivity"
            android:parentActivityName=".MainPage.MainActivity"/>
        <activity android:name=".User.EnterUserNameActivity" />
        <activity android:name=".QuizFolder.AddQuestionsFromFileActivity" />
        <activity android:name=".Game.ResultViewActivity" />
        <activity
            android:name=".Game.GameActivity"
            android:parentActivityName=".MainPage.MainActivity" />
        <activity
            android:name=".Game.SelectionQuizzesToGameActivity"
            android:parentActivityName=".MainPage.MainActivity" />
        <activity android:name=".Question.AddQuestionActivity" />
        <activity
            android:name=".Question.QuestionEditorActivity"
            android:parentActivityName=".Question.QuestionsViewActivity" />
        <activity android:name=".QuizFolder.TypeQuizNameActivity" />
        <activity android:name=".Statistic.StatisticViewActivity"
            android:parentActivityName=".User.UserSettingsActivity"/>
        <activity
            android:name=".Game.GameStartActivity"
            android:parentActivityName=".MainPage.MainActivity" />
        <activity android:name=".Question.QuestionsViewActivity" />
        <activity
            android:name=".QuizFolder.QuizMenuActivity"
            android:parentActivityName=".MainPage.MainActivity" />
        <activity
            android:name=".MainPage.MainActivity"
            android:label="@string/app_name"
            android:launchMode="singleTask"
            android:theme="@style/AppTheme.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>